<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Crop_View"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <ImageView
        android:id="@+id/img1"
        android:layout_width="140dp"
        android:layout_height="121dp"
        android:layout_marginBottom="82dp"
        android:layout_marginTop="78dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="@+id/txt_date"
        app:layout_constraintHorizontal_bias="0.755"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="96dp"
        android:layout_height="120dp"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:text="Tomato"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="131dp"
        android:layout_height="20dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="22dp"
        android:text="Water Availability"
        app:layout_constraintBottom_toTopOf="@+id/txt_date"
        app:layout_constraintLeft_toLeftOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="132dp"
        android:layout_height="0dp"
        android:text="Average Temperature"
        app:layout_constraintBottom_toBottomOf="@+id/txt_temp"
        app:layout_constraintLeft_toLeftOf="@+id/txt_content"
        app:layout_constraintTop_toTopOf="@+id/txt_temp"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="130dp"
        android:layout_height="21dp"
        android:text="Soil Type"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_soil"
        app:layout_constraintLeft_toLeftOf="@+id/txt_date"
        tools:layout_constraintBaseline_creator="1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="127dp"
        android:layout_height="19dp"
        android:text="PH"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/txt_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.765" />

    <TextView
        android:id="@+id/txt_water"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="23dp"
        android:text="25mm"
        app:layout_constraintBottom_toTopOf="@+id/txt_temp"
        app:layout_constraintRight_toRightOf="@+id/img1"
        app:layout_constraintTop_toBottomOf="@+id/img1"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_temp"
        android:layout_width="63dp"
        android:layout_height="18dp"
        android:layout_marginBottom="228dp"
        android:text="27 degree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txt_water"
        tools:layout_constraintBottom_creator="1" />

    <TextView
        android:id="@+id/txt_soil"
        android:layout_width="64dp"
        android:layout_height="20dp"
        android:layout_marginBottom="53dp"
        android:layout_marginTop="56dp"
        android:text="Dry"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintRight_toRightOf="@+id/txt_temp"
        app:layout_constraintTop_toTopOf="@+id/txt_temp"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_ph"
        android:layout_width="62dp"
        android:layout_height="18dp"
        android:text="6.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/txt_soil"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</android.support.constraint.ConstraintLayout>
