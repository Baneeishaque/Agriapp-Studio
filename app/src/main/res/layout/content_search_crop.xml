<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Search_Crop"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/txt_water"
        android:layout_width="0dp"
        android:layout_height="43dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_soil"
        app:layout_constraintRight_toRightOf="@+id/txt_temp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="16dp"
        android:text="Water Availability"
        app:layout_constraintBottom_toBottomOf="@+id/txt_water"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_water"
        app:layout_constraintTop_toTopOf="@+id/txt_water"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_content"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="Average Temperature"
        app:layout_constraintBottom_toTopOf="@+id/spinner_soil"
        app:layout_constraintLeft_toLeftOf="@+id/txt_title"
        app:layout_constraintRight_toRightOf="@+id/txt_title"
        app:layout_constraintTop_toBottomOf="@+id/txt_name"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <EditText
        android:id="@+id/txt_temp"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_marginBottom="28dp"
        android:layout_marginTop="29dp"
        android:ems="10"
        app:layout_constraintBottom_toTopOf="@+id/spinner_soil"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_soil"
        app:layout_constraintRight_toRightOf="@+id/spinner_soil"
        app:layout_constraintTop_toBottomOf="@+id/txt_water"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="30dp"
        android:text="Soil Type"
        app:layout_constraintLeft_toLeftOf="@+id/button_search_crop"
        app:layout_constraintRight_toRightOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_content"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Button
        android:id="@+id/button_search_crop"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginBottom="111dp"
        android:layout_marginEnd="14dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginStart="14dp"
        android:text="Search"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <EditText
        android:id="@+id/txt_ph"
        android:layout_width="131dp"
        android:layout_height="0dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:ems="10"
        app:layout_constraintBottom_toBottomOf="@+id/txt_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txt_date"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="27dp"
        android:text="PH"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/button_search_crop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txt_ph"
        app:layout_constraintTop_toBottomOf="@+id/spinner_soil"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <Spinner
        android:id="@+id/spinner_soil"
        android:layout_width="0dp"
        android:layout_height="37dp"
        android:layout_marginBottom="93dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="19dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="93dp"
        app:layout_constraintBottom_toTopOf="@+id/button_search_crop"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/txt_date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_water"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
