<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="agriapp.studio.ndk.agriappstudio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Introduction1"></activity>
        <activity android:name=".Introduction2"></activity>
        <activity android:name=".Introduction3"></activity>
        <activity android:name=".Introduction4"></activity>
        <activity
            android:name=".Login"
            android:label="Authentication" />
        <activity
            android:name=".Registration"
            android:label="Registration" />
        <activity
            android:name=".Labour"
            android:label="Labour Home" />
        <activity
            android:name=".Farmer_Home"
            android:label="Farmer Home"
            android:launchMode="singleTask" />
        <activity
            android:name=".Seller"
            android:label="Seller Home" />
        <activity
            android:name=".Officer"
            android:label="Officer Home" />
        <activity
            android:name=".Accessory_Supplier"
            android:label="Supplier Home" />
        <activity
            android:name=".Search_Crop"
            android:label="Search For Crops"
            android:launchMode="singleTask">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Farmer_Home" />
        </activity>
        <activity
            android:name=".Search_Crop_Result"
            android:label="Search Results">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".Search_Crop" />
        </activity>
        <activity
            android:name=".Crop_View"
            android:label="Crop Details" />
        <activity
            android:name=".Notification_List"
            android:label="Notifications" />
        <activity
            android:name=".Notification_View"
            android:label="Notification View" />
        <activity
            android:name=".Accessories"
            android:label="Services" />
        <activity android:name=".Consultation_List" />
        <activity android:name=".Consultation_View" />
        <activity android:name=".Weather" />
        <activity android:name=".Fertilizers" />
        <activity android:name=".Blog_List" />
        <activity android:name=".Blog_View" />
    </application>

</manifest>