<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="get_notification_thread"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.agriapp.Searchcrop">

    <EditText
        android:id="@+id/water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="49dp"
        android:layout_toRightOf="@+id/txt_name"
        android:layout_x="126dp"
        android:layout_y="17dp"
        android:ems="10">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="99dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/txt_water"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/txt_water"
        android:layout_marginLeft="19dp"
        android:text="Water Availability" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="83dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_name"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="30dp"
        android:text="Average Temperature" />

    <EditText
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_water"
        android:layout_alignTop="@+id/txt_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_content"
        android:layout_alignRight="@+id/txt_content"
        android:layout_below="@+id/txt_temp"
        android:layout_marginTop="38dp"
        android:text="Soil Type" />

    <EditText
        android:id="@+id/soil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txt_title"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_alignLeft="@+id/txt_temp"
        android:ems="10" />

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/txt_soil"
        android:layout_below="@+id/txt_soil"
        android:layout_marginTop="88dp"
        android:onClick="get_notification_thread"
        android:text="Search" />

    <EditText
        android:id="@+id/ph1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_soil"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txt_soil"
        android:layout_marginTop="26dp"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_ph"
        android:layout_alignLeft="@+id/txt_title"
        android:text="PH" />

</RelativeLayout>
