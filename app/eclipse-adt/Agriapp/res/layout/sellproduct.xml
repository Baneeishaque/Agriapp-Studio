<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.myproject.Activitysellproduct">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="54dp"
        android:text="Product Name:" />

    <EditText
        android:id="@+id/cost"
        android:layout_width="152dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_date"
        android:layout_alignRight="@+id/txt_search"
        android:layout_toRightOf="@+id/txt_title"
        android:ems="10" />

    <EditText
        android:id="@+id/name"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_name"
        android:layout_toRightOf="@+id/txt_title"
        android:ems="10" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txt_title"
        android:layout_below="@+id/txt_name"
        android:layout_marginTop="31dp"
        android:text="Unit Cost:" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/txt_date"
        android:layout_marginTop="41dp"
        android:text="Minimum Quantity:" />

    <EditText
        android:id="@+id/office"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txt_content"
        android:layout_alignRight="@+id/cost"
        android:layout_toRightOf="@+id/txt_title"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="119dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img1"
        android:layout_alignRight="@+id/txt_content"
        android:layout_marginBottom="14dp"
        android:text="Add Picture Here:" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_alignRight="@+id/office"
        android:layout_below="@+id/img1"
        android:layout_marginTop="34dp"
        android:onClick="save"
        android:text="Save" />

    <ImageView
        android:id="@+id/img1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/office"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_launcher" />

</RelativeLayout>